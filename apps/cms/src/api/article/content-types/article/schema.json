{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "글",
    "description": "위키보드 블로그/아티클 콘텐츠"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 1000
    },
    "body": {
      "type": "richtext"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "review",
        "scheduled",
        "published",
        "archived"
      ],
      "default": "draft",
      "required": true
    },
    "publish_at": {
      "type": "datetime"
    },
    "published_at": {
      "type": "datetime"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    }
  }
}
