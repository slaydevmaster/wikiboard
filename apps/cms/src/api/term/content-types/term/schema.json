{
  "kind": "collectionType",
  "collectionName": "terms",
  "info": {
    "singularName": "term",
    "pluralName": "terms",
    "displayName": "용어",
    "description": "위키보드 용어 사전 콘텐츠"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "one_liner": {
      "type": "string",
      "maxLength": 500
    },
    "summary": {
      "type": "text"
    },
    "body": {
      "type": "richtext"
    },
    "aliases": {
      "type": "json",
      "default": null
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "review",
        "scheduled",
        "published",
        "archived"
      ],
      "default": "draft",
      "required": true
    },
    "publish_at": {
      "type": "datetime"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "terms"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "terms"
    }
  }
}
